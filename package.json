{
  "name": "cpm-kpi-review-tool",
  "version": "1.0.0",
  "description": "CPM KPI Review Tool for annual KPI rationalization workshops",
  "main": "src/main/main.js",
  "scripts": {
    "start": "concurrently \"npm run start:renderer\" \"wait-on http://localhost:3000 && npm run start:main\"",
    "start:main": "electron .",
    "start:renderer": "cd src/renderer && vite",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "cd src/renderer && vite build",
    "build:main": "cp -r src/main dist/",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "generate-sample": "node scripts/generate-sample-data.js"
  },
  "build": {
    "appId": "com.cpm.kpi-review-tool",
    "productName": "CPM KPI Review Tool",
    "directories": {
      "output": "release"
    },
    "files": [
      "src/renderer/dist/**/*",
      "src/main/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "portable": {
      "artifactName": "${productName}.exe"
    }
  },
  "dependencies": {
    "exceljs": "^4.4.0",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  }
}
